{
    "extends": "ts-node/node12/tsconfig.json",
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "rootDir": ".",
            "resolveJsonModule": true
        }
    },
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["node"],
        "declaration": true,
        "jsx": "react-jsx"
    },
    "include": ["src", "scripts", "types.d.ts"],
    "exclude": ["**/node_modules/**"]
}
