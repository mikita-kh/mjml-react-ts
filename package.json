{
    "name": "@humans-email-kit/react-mjml",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "author": "Mikita Khatsimtsou<nikita.mmf@gmail.com>",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "generate": "ts-node-cwd scripts/generate.ts",
        "postgenerate": "yarn lint:fix",
        "prebuild": "yarn clean",
        "build": "tsc --build -verbose",
        "lint": "eslint src --ext ts,tsx",
        "lint:fix": "yarn lint --fix",
        "lint:ci": "yarn lint --quiete",
        "clean": "rimraf dist",
        "prepare": "husky install"
    },
    "dependencies": {
        "mjml": "4.10.2",
        "mjml-core": "4.10.2",
        "react": "^17.0.0",
        "react-dom": "^17.0.0"
    },
    "devDependencies": {
        "@types/node": "^14.0.11",
        "@types/prettier": "^2.3.2",
        "@types/react": "^17.0.15",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "camelcase": "^6.0.0",
        "eslint": "^7.5.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.20.3",
        "eslint-plugin-react-hooks": "^4.0.8",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "handlebars": "^4.7.6",
        "husky": ">=6",
        "lint-staged": "^11.1.1",
        "pascalcase": "^1.0.0",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.0",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "extends": [
            "airbnb-typescript",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier"
        ],
        "plugins": [
            "@typescript-eslint",
            "simple-import-sort",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": "error",
            "simple-import-sort/exports": "error",
            "simple-import-sort/imports": [
                "error",
                {
                    "groups": [
                        [
                            "^react.*",
                            "^[a-zA-Z].*"
                        ],
                        [
                            "^@(.*|$)"
                        ],
                        [
                            "^\\.\\.(?!/?$)",
                            "^\\.\\./?$"
                        ],
                        [
                            "^\\./(?=.*/)(?!/?$)",
                            "^\\.(?!/?$)",
                            "^\\./?$"
                        ]
                    ]
                }
            ]
        }
    },
    "eslintIgnore": [
        "node_modules",
        "dist"
    ],
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "jsxBracketSameLine": false,
        "jsxSingleQuote": false,
        "singleQuote": true,
        "printWidth": 140,
        "trailingComma": "all"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": "eslint --cache --fix"
    }
}
